<% post_images.each do |post_images| %>
<div>
  <p>投稿ユーザー画像:</p>
  <%= link_to post_image_path(post_images.id) do %>
    <%= image_tag post_images.user.get_profile_image(100,100) %>
  <% end %>

  <p>ショップ名：<%= post_images.shop_name %></p>
  <p>説明：<%= post_images.caption %></p>
  <p>ユーザーネーム：<%= post_images.user.name %></p>
  <p><%= link_to "#{post_images.post_comments.count} コメント", post_image_path(post_images.id) %></p>
</div>
<% end %>
<%= paginate post_images %>